@{
    ViewBag.Title = "Persian DateTime Picker";
}

<h2>Persian DateTime Picker</h2>

<input type="datetime" id="DateTime" />

@section Styles{
    <link href="~/Content/Meh/PersianDateTimePicker/Redmond/jquery-ui-1.9.2.custom.min.css" rel="stylesheet" />
    <link href="~/Content/Meh/PersianDateTimePicker/jquery-ui-datetimepicker.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/Scripts/Meh/PersianDateTimePicker/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Meh/PersianDateTimePicker/jquery-ui-1.9.2.min.js"></script>
    <script src="~/Scripts/Meh/PersianDateTimePicker/jquery-ui-datetimepicker.min.js"></script>
    <script>
        $(function () {
            $("#DateTime").datetimepicker();
        });
    </script>
}