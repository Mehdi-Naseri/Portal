@section Scripts{
    <script src="~/Scripts/Meh/jQueryCycle/jquery.cycle.all.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#slideshow').cycle(
                {
                    fx: 'scrollUp',
                    prev: '#prev',
                    next: '#next',
                    height: 100,
                    pauseOnPagerHover: 1
                }
                );
        })
    </script>
}
